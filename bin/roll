#!/usr/bin/env ruby
lib_dir = File.dirname(__FILE__) + '/../lib'
$LOAD_PATH.unshift(lib_dir) unless $:.include?(lib_dir)

begin
  require 'roller'
  Magni.delegate_to(Roller::Runner, :start)
rescue Exception => e
  STDERR.puts("#{ e.message } (#{ e.class })")
  STDERR.puts(e.backtrace.join("\n"))
  Kernel.exit(1)
end